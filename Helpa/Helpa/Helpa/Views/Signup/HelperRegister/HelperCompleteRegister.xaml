                                <Grid Grid.Row="0" Margin="0,10,0,0">
                                    <Image Source="picture.png" Aspect="AspectFit"/>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Label Text="Required" FontSize="Medium" TextColor="#FF748C" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Row="2" Margin="0,10,0,0">
                                    <Label Text="Username:" TextColor="#5E6071" FontAttributes="Bold" VerticalTextAlignment="Center"/>
