                        </Grid>
                        <Grid Grid.Column="2">
                            <Label Text="Build Trust" TextColor="#838C91" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        </Grid>
                    </Grid>
                    
                    <Grid x:Name="gridTitlesOutline" Grid.Row="1" ColumnSpacing="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*"/>
                            <ColumnDefinition Width="0.1*"/>
                            <ColumnDefinition Width="0.1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="gridHelperBasic" Grid.Column="0" BackgroundColor = "#FF748C"/>
                        <Grid x:Name="gridHelperEditServices" Grid.Column="1" BackgroundColor = "Transparent" ColumnSpacing="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" BackgroundColor = "#818A8F"/>
                        </Grid>
                        <Grid x:Name="gridHelperBuildTrust" Grid.Column="2" BackgroundColor = "#818A8F" />
                    </Grid>

                    <Grid Grid.Row="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <!--#region Helper Basic Information-->
                        <ScrollView x:Name="svHelperBasicInfo">
                            <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <!--<RowDefinition Height="0.3*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.11*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.12*"/>
