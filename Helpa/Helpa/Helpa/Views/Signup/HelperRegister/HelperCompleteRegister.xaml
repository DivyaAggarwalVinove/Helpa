                                    <RowDefinition Height="Auto"/>
                                    <!-- Qualifications -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Year of experience -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Experience in no. -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Experience progress-->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Target Age group -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Age group values -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Age Group Progress -->
                                    <RowDefinition Height="Auto"/>
                                    <!--<RowDefinition Height="0.12*"/>-->
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Required" TextColor="#FF748C" FontSize="Medium" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Status:" TextColor="#5E6071" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Row="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,5,0,0">
                                    <ctrls:RadioGroup
                                    x:Name="rgHelperStatus"                                                    
                                    Orientation="Horizontal"
                                    OnImg="radio_close.png" 
                                    OffImg="radio_button.png"
                                    SelectedItem="Available"/>
                                </Grid>

                                <Grid Grid.Row="3" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Select service(s):" TextColor="#5E6071" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Row="4" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                    <ScrollView>
                                        <Grid x:Name="gridServices" ColumnSpacing="10" RowSpacing="5">
                                        </Grid>
                                    </ScrollView>
                                </Grid>

                                <Grid Grid.Row="5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Optional" TextColor="#FF748C" FontAttributes="Bold" FontSize="Medium" VerticalTextAlignment="Center" VerticalOptions="FillAndExpand"/>
                                </Grid>
                                
                                <Grid Grid.Row="6" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Qualifications:" TextColor="#6F7281" FontAttributes="Bold" VerticalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                </Grid>

                                <Grid Grid.Row="7" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,5,0,0">
                                    <local:CustomEntry x:Name="entryHelperRegQualifications" FontSize="Small" IsEnabled="True" Placeholder="Enter relevant qualifications, awarding bodies, etc." PlaceholderColor="#939BA0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,30,0,30"/>
                                </Grid>

                                <Grid Grid.Row="8" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Years of experience:" TextColor="#6F7281"  FontAttributes="Bold" VerticalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                </Grid>

                                <Grid Grid.Row="9" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,5,0,10">
                                    <local:ServiceButton x:Name="btnHelperRegExpCount" Text="15" HorizontalOptions="Center" IsEnabled="False"/>
                                </Grid>

                                <Grid Grid.Row="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <!--<Slider Minimum="0" Maximum="100" Value="15" HorizontalOptions="FillAndExpand" ValueChanged="SetYearOfExperience" />-->
                                    <forms:RangeSlider MinimumValue="0" MaximumValue="100" MinThumbHidden="True" UpperValue="15" StepValue="1" StepValueContinuously="True" VerticalOptions="Center" TextSize="15" BarHeight="10" UpperValueChanged="SetYearOfExperience" />
                                </Grid>

                                <Grid Grid.Row="11" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <Label Text="Target age group:" TextColor="#6F7281" FontAttributes="Bold" VerticalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                </Grid>

                                <Grid Grid.Row="12" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,5,0,0">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                        <local:ServiceButton x:Name="btnHelperRegAgeMin" Text="0" IsEnabled="False"/>
                                        <BoxView x:Name="btnHelperRegAge" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="1" WidthRequest="2" BackgroundColor="#BCC1C4" Margin="15,0,15,0"/>
                                        <local:ServiceButton x:Name="btnHelperRegAgeMax" Text="6" IsEnabled="False"/>
                                    </StackLayout>
                                </Grid>

                                <Grid Grid.Row="13" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,10,0,0">
                                    <forms:RangeSlider x:Name="RangeSlider" MinimumValue="0" MaximumValue="10" LowerValue="0" UpperValue="6" StepValue="1" StepValueContinuously="True" VerticalOptions="Center" TextSize="15" BarHeight="10" LowerValueChanged="SetMinAge" UpperValueChanged="SetMaxAge" />
                                </Grid>

                                <Grid Grid.Row="14" VerticalOptions="FillAndExpand" HorizontalOptions="End" Margin="0,10,0,10">
                                    <Button x:Name="btnHelperRegEditServicesNext" Clicked="OnHelperRegEditServicesNext" Text="Next >" TextColor="White" BackgroundColor="#FF748C" />
                                </Grid>
                            </Grid>
                        </ScrollView>

                        <!--#region HelperServices-->
                        <ScrollView x:Name="svHelperRegHelperHome" IsVisible="False">
                            <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Service Title -->
                                    <RowDefinition Height="75"/>
                                    <!-- Service Details -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Required -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Location type titles -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Location types -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Location Titles -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Locations -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Price Titles -->
                                    <RowDefinition Height="0.05*"/>
                                    <!-- Prices -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Hour -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Day -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Monthly -->
                                    <RowDefinition Height="0.05*"/>
                                    <!-- Optional -->
                                    <RowDefinition Height="Auto"/>
